<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.bux.rollingdashboard"
    android:versionCode="2"
    android:versionName="2.0"
    >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RollingDashboardApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_rolling_character"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/baseline_accessibility_new_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.RollingDashboard">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RollingDashboard.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>